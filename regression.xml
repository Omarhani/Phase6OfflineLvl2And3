<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="regression test suite" parallel="tests" thread-count="2">
    <test name="chrome" parallel="classes" thread-count="3">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="login.LoginTests"/>
            <class name="login.LoginTests2">
                <methods>
                    <include name="testSuccessfulLogin3"/>
                    <include name="testSuccessfulLogin2"/>
                </methods>
            </class>
            <class name="login.LoginTests3">
                <methods>
                    <exclude name="testSuccessfulLogin6"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="firefox" parallel="classes" thread-count="2">
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="login.LoginTests2">
                <methods>
                    <include name="testSuccessfulLogin3"/>
                    <include name="testSuccessfulLogin2"/>
                </methods>
            </class>
            <class name="login.LoginTests3"></class>
        </classes>
    </test>
</suite>